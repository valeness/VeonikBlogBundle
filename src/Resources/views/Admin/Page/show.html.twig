{% extends 'VeonikBlogBundle:Admin:base.html.twig' %}

{% set title = 'Page: ' ~ entity.title %}

{% block content %}
<table class="table summary">
    <tbody>
        <tr>
            <th>ID</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Title</th>
            <td>{{ entity.title }}</td>
        </tr>
        <tr>
            <th>Slug</th>
            <td>{{ entity.slug }}</td>
        </tr>
        <tr>
            <th>Published</th>
            <td>{{ entity.active ? 'Yes' : 'No' }}</td>
        </tr>
        <tr>
            <th>Date Modified</th>
            <td>{{ entity.dateModified|default('Never') }}</td>
        </tr>
        <tr>
            <th>Date Created</th>
            <td>{{ entity.dateCreated }}</td>
        </tr>
    </tbody>
</table>
{% endblock %}

{% block page_controls %}
    <div class="btn-group">
        <a class="btn btn-primary" href="{{ path('manage_page_edit', { 'id': entity.id }) }}">Edit Page</a>
        <a class="btn" href="{{ path('manage_page_preview', { id: entity.id }) }}" target="_blank">Preview</a>
    </div>
{% endblock %}